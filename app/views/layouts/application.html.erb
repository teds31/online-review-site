<!DOCTYPE html>
<html>
  <head>
    <title>Gary V Wine Reviews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>Gary V Wine Reviews</h1>
    <br>
    <nav>
      <% if user_signed_in? %>
        <%= link_to 'Add A Wine', new_product_path %>
        <%= link_to 'My Account', edit_user_registration_path %>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
        <% if current_user.admin? %>
          <li><%= link_to "Admin Section", admin_only_index_path %></li>
        <% end %>
      <% else %>
        <%= link_to 'Sign Up', new_user_registration_path %>
        <%= link_to 'Sign In', new_user_session_path %>
      <% end %>
    </nav>
    <br>
    <%= form_tag(products_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Wines", required: true  %>
        <%= submit_tag "Search", :name => nil %>
    <% end %>
    <div class="container">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>

  </body>
</html>
